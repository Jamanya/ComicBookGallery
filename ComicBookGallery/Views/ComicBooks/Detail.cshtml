
@{
    Layout = null;

   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ComicBook Details</title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
    </div>

    <div>
        <h3>Issue #@ViewBag.IssueNumber</h3>
    </div>

    <div>
        <h4>Description:</h4>
        <h5>@Html.Raw(ViewBag.Description)</h5>
    </div>

    @if (ViewBag.Artists.Length > 0)
    {
        <div>
            <h5>Artists:</h5>
            <div>
                <ul>
                    @foreach (var artist in ViewBag.Artists)
                    {
                        <li>
                            @artist
                        </li>

                    }
                </ul>
            </div>
        </div>

    }


</body>
</html>
