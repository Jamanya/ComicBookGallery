@model ComicBookGallery.Models.ComicBook
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;
   
}



<h1>@Model.SeriesTitle</h1>
<h3>Issue #@Model.IssueNumber</h3>

<h4>Description:</h4>
<h5>@Html.Raw(Model.DescriptionHtml)</h5>

@if (Model.Artists.Length > 0)
{
<div>
    <h5>Artists:</h5>
    <div>
        <ul>
            @foreach (var artist in Model.Artists)
            {
                <li>
                   @artist.Role: @artist.Name
                </li>

            }
        </ul>
    </div>
</div>

}
